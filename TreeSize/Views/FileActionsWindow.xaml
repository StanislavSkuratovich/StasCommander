<Window x:Class="TreeSize.Views.FileActionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeSize.Views"
        mc:Ignorable="d"
        d:DesignHeight="120" d:DesignWidth="150"
        Title="FileActionsWindow" >
    <!--d:DesignHeight="120" d:DesignWidth="150">-->
    <Border Padding="3" BorderBrush="AliceBlue" BorderThickness="2">
    <Canvas>
        <StackPanel x:Name="panel">
                <Button x:Name="Delete" Content="Delete" Height="30" Width="150" Click="Panel_Click"/>
                <Button x:Name="Copy" Content="Copy" Height="30" Click="Panel_Click"/>
                <Button x:Name="Paste" Content="Paste" Height="30" Click="Panel_Click"/>                
        </StackPanel>
    </Canvas>
    </Border>
</Window>
